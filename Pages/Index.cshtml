@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body>
    
    <!-- Header-->
    <header class="mb-4">
        <img src="https://bookbuy.vn/Res/Images/Album/9210ad11-08b5-4fae-a5fe-7556343ca9e9.jpg?w=880&scale=both&h=320&mode=crop" width="100%" />
    </header>
  
    <form method="post">
        <span style="margin-right:40px">
            <label for="categoryId" style="font-weight:bold">Category</label>
            <select asp-for="categoryId" class=" w-25 col-form-label" asp-items="ViewBag.CategoryId"></select>
        </span>
        <select asp-for="option" class="w-15 col-form-label" style="font-weight:bold">
            <option value="1">Book Name</option>
            <option value="2">Author</option>
        </select>
        <span>
            <input asp-for="search" class=" col-form-label" style="width:300px" />
            <button class="btn btn-primary" type="submit" style="height:100%;width:90px">Search</button>
        </span>
        
    </form>
    
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach(var item in Model.books)
                {
                    <div class="col mb-5">
                        <div class="card h-100 border shadow rounded-3">
                            <!-- Product image-->
                            <img class="card-img-top" src="@item.Image" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.BookName</h5>
                                    <!-- Product price-->
                                    <span>@item.Category.CategoryName</span>
                                </div>
                            </div>
                            <!-- Product actions-->
                            
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">

                                <div class="text-center" onclick="submitForm(this)">
                                    <form method="post" id="myForm" asp-page-handler="AddCart" asp-page="/Index">
                                        <input type="hidden" value="@item.Id" name="id" />
                                    </form>
                                    <a class="btn btn-outline-dark mt-auto" href="javascript:void(0);">Add to cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                     
                
            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
<script>
    function submitForm(element) {
        var form = element.querySelector('form');
        form.submit();
    }
    
</script>

@if (Model.showAlert)
{
    <script>
        alert('@Model.alertMessage');
    </script>
}

</html>